<div class='wrapper col-md-3'>
    <div id="sidebar-wrapper">
      <div class='usercard'>
        <img class='avatar' src='https://s3-us-west-2.amazonaws.com/tunefish/logo.jpg'>
        <p class='manage'>Manage Your Acccounts</p>
        <div class='icon-container'>
          <div>
            <a href="http://127.0.0.1:3000/auth/soundcloud" target="_blank">
              <img src='https://s3-us-west-2.amazonaws.com/tunefish/soundcloud-icon.png' height='26%' width='26%'>
            </a>
            <a href="http://127.0.0.1:3000/auth/google_oauth2" target="_blank">
              <img src='https://s3-us-west-2.amazonaws.com/tunefish/256px-Youtube_icon.svg.png' height='23%' width='23%'>
            </a>
            <a href="http://127.0.0.1:3000/auth/twitter" target="_blank">
              <img src='https://s3-us-west-2.amazonaws.com/tunefish/twitter-icon.png' height='23%' width='23%'>
            </a>
          </div>
        </div>
      </div>
      <div>
        <h3>Filter Music</h3>
        <div class='filters'>
          <h4>By Provider</h4>
          <p class='provider-filters'>
            <input type='checkbox'>Youtube<br>
            <input type='checkbox'>Twitter<br>
            <input type='checkbox'>Last.fm<br>
            <input type='checkbox'>Soundcloud<br>
          </p>
          <h4>Tags</h4>
          <p class='provider-filters'>
            <input type='checkbox'>Funk<br>
            <input type='checkbox'>Rock<br>
            <input type='checkbox'>Jazz<br>
            <input type='checkbox'>Blues<br>
          </p>
          <h4>Other</h4>
          <p class='provider-filters'>
            <input type='checkbox'>Most Recent<br>
            <input type='checkbox'>Least Recent<br>
            <input type='checkbox'>Most Played<br>
            <input type='checkbox'>Least Played<br>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div id="page-content-wrapper">
    <div class="page-content ">
      <div class="container feed-page">
        <div class="row">
          <div class="col-md-9">
            <div class='feed'>
            {{#each activity in content itemController="activity"}}
              {{#with activity}}
                {{#if isYoutube}}
                  <div class='music'>
                    <iframe width="100%" height="500" src={{unbound url}} frameborder="0" allowfullscreen></iframe>
                  </div>
                {{/if}}
                {{#if isSoundcloud}}
                  <div class='music'>
                    <iframe height='300' width='100%' scrolling="no" frameborder="no" src={{unbound url}}></iframe>
                  </div>
                {{/if}}
                {{#if isTwitter}}
                  <div class='tweet'>{{{unbound url}}}</div>
                {{/if}}
              {{/with}}
            {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
